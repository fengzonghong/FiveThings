<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarSize="15dp">

  <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myapplication.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/alpha"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />
      <ImageView

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="centerCrop"
          android:src="@drawable/pikaqiu"
          android:layout_below="@+id/background"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignBottom="@+id/button3"
          android:id="@+id/imageView" />
    <Button
        android:layout_weight="1"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exercising"
        android:text="Exercising whole time"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAllCaps="false"
        android:layout_below="@+id/background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_weight="1"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EVERYWHERE"
        android:text="Pokémon EVERYWHERE"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAllCaps="false"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_weight="1"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searching"
        android:text="searching for Pokémon"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Poké"
        android:text="Poké Stops and Gyms"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:layout_above="@+id/button5"
        android:layout_alignTop="@+id/button2" />

    <Button
        android:layout_weight="1"
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="dangerous"
        android:text="a little dangerous"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textAllCaps="false"
        android:layout_below="@+id/button2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking back at how players consumed Pokémon Go this weekend, here are five things we learned:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#25fb05"
        android:textSize="26sp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="5 Pokemon GO"
          android:id="@+id/textView"
          android:textSize="56sp"
          android:shadowColor="#fbcb0c"
          android:layout_marginTop="35dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:text="Notices"
          android:id="@+id/textView2"
          android:layout_below="@+id/textView"
          android:layout_centerHorizontal="true"
          android:textSize="30sp"
          android:shadowColor="#fbcb0c"
          android:textColor="#040404" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Official Web"
          android:id="@+id/button6"
          android:onClick="web"
          android:textAllCaps="false"
          android:layout_below="@+id/background"
          android:layout_alignRight="@+id/textView"
          android:layout_alignEnd="@+id/textView"
          android:layout_toEndOf="@+id/button"
          android:layout_alignLeft="@+id/button4"
          android:layout_alignStart="@+id/button4" />


  </RelativeLayout>
</ScrollView>
